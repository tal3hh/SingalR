@model AppUser


<form asp-action="Login" asp-controller="Account" method="post" class="container">

    <div asp-validation-summary="ModelOnly"></div>

    <div class="row p-1">
        <div class="col-1">UserName</div>
        <div class="col-5"><input asp-for="UserName" /></div>
    </div>
    <div class="row p-1">
        <div class="col-1">Password</div>
        <div class="col-5"><input type="text" asp-for="PasswordHash" /></div>
    </div>
    <div class="row p-1">
        <div class="col-6 text-end">
            <button type="submit">Submit</button>
        </div>
    </div>
</form>